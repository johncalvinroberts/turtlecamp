<div class="wrapper-form">
  <div class="container-form">

  <h2>Sign up!</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, class:"form-input-box", require: true, autofocus:true %>
      <%= f.input :email, class:"form-input-box", required: true %>
      <%= f.input :password, class:"form-input-box", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, class:"form-input-box", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-rec-signup" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  </div>
</div>





