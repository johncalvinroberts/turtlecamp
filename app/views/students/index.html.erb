
  <div class="container-form">
    <div class="container-fluid card-counselor">
      <div>
        <h1>Hello <%= current_user.name %></h1>
        <h4>Here are your students</h4>
      </div>
      <div class="actions">
        <%= link_to "Add new student", new_student_path, class:"btn-rec-green" %>
      </div>
    </div>

    <div class="container">
      <% if @students == nil %>
       <p>nothing</p>
      <% else %>
        <% @students.find_in_batches(batch_size: 4) do |students| %>
      <div class="row">
         <% students.each do |student| %>
         <!-- find a way to put margins around the card -->
        <div class="col-xs-12 col-sm-3" id="card-margin">
          <div class="card-student">
            <div class="card-name">
              <p><%= link_to "#{student.name}", student_path(student)%></p>
            </div>
            <div class="card-schools">
              <img class="card-logo" src="http://placehold.it/50x50">
              <img class="card-logo" src="http://placehold.it/50x50">
              <img class="card-logo" src="http://placehold.it/50x50">
            </div>
            <div class="card-total">
              Total 2 Schools
            </div>
          </div>
            <a href="" class="card-link"></a>
        </div>
          <% end %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
