<div class="navbar-wagon">
  <!-- left section of navbar-->
  <div class="navbar-line hidden-xs hidden-sm">
    <% if current_user.is_counselor %>
      <%= link_to students_path, class: "navbar-wagon-item navbar-wagon-link" do %>
      <div class="navbar-thing-container">
        <div class="badge-container">
          <div class="navbar-thing">students</div>
          <div class="badge badge-green"><%= current_user.students.count %>
          </div>
        </div>
      </div>
      <% end %>

      <%= link_to new_student_path do %>
      <div class="navbar-thing-container">
        <div class="badge-container">
          <div class="navbar-thing">Add a student</div>
        </div>
      </div>
      <% end %>

    <% else %>

      <%= link_to college_apps_path, class: "navbar-wagon-item navbar-wagon-link" do %>
      <div class="navbar-thing-container">
        <div class="badge-container">
          <div class="navbar-thing">Applications</div>
          <div class="badge badge-green"><%= current_user.tasks.count %>
          </div>
        </div>
      </div>
      <% end %>
      <%= link_to new_college_app_path, class: "navbar-wagon-item navbar-wagon-link"  do %>
      <div class="navbar-thing-container">
        <div class="badge-container">
          <div class="navbar-thing">Add a school</div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="navbar-wagon-right">
    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <h1 class="navbar-text dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"> Turtlecamp <i class="fa fa-caret-down down white" id="down-caret"></i> </h1>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if current_user.is_counselor %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Add a student", new_student_path %></li>
        <li><%= link_to "Students", students_path %></li>
      </ul>
    </div>
  </div>
  <% else %>
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Applications", college_apps_path %></li>
        <li><%= link_to "Add a school", new_college_app_path %></li>
      </ul>
    </div>
  </div>
  <% end %>

</div>

<script>
  $("#navbar-wagon-menu").hover(function(){
    $("#down-caret").toggleClass("white")
  });

</script>

