<script type="text/javascript">

  var data = [
      <% @student.tasks_by_status_count.each do |type| %>
        {label: '<%=type[:label]%>', value: <%=type[:value]%>},
      <% end %>
  ];

  var colors = [ "#FBD04D", "#fe6271", "#4DDE7B"];

  Morris.Donut({
    element: 'total-tasks-donut',
      data: data,
      resize: true, //defaulted to true
      colors: colors,
      backgroundColor: '#fff'
  });



</script>
