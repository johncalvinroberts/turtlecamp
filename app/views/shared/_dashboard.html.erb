      <div class="col-lg-3 col-md-12 col-sm-12">
        <div class="card-box">
           <h4 class="header-title m-t-0">Tasks</h4>

            <div class="row text-center m-t-30">
              <div class="col-xs-6">
                <h3 data-plugin="counterup"><%= @student.tasks.count %></h3>
                <p class="text-muted">Total Tasks</p>
              </div>
